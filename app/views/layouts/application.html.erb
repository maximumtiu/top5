<!DOCTYPE html>
<html>
<head>
  <title>Top5</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <div class="masthead clearfix">
            <div class="inner">
              <h3 class="masthead-brand"><%= image_tag "logo.png" %>  TTS Music</h3>
              <nav>
                <ul class="nav masthead-nav">
                  <%# if current_page?(controller: 'rock', action: 'roll') %>
                    <li class="active"><%#= link_to "Top5", root_path %></li>
                    <li><%#= link_to "Artists", artists_path %></li>
                    <li><%#= link_to "Songs", songs_path %></li>
                  <%# elsif current_page?(controller: 'artists', action: 'index') %>
                    <li><%#= link_to "Top5", root_path %></li>
                    <li class="active"><%#= link_to "Artists", artists_path %></li>
                    <li><%#= link_to "Songs", songs_path %></li>
                  <%# elsif current_page?(controller: 'songs', action: 'index') %>
                    <li><%#= link_to "Top5", root_path %></li>
                    <li><%#= link_to "Artists", artists_path %></li>
                    <li class="active"><%#= link_to "Songs", songs_path %></li>
                  <%# else %>
                    <li><%= link_to "Top5", root_path %></li>
                    <li><%= link_to "Artists", artists_path %></li>
                    <li><%= link_to "Songs", songs_path %></li>
                  <%# end %>
                </ul>
              </nav>
            </div>
          </div>

          <div class="inner cover">
						<%= yield %>
					</div>
					<div class="mastfoot">
            <div class="inner">
            </div>
					</div>

        </div>

      </div>

    </div>
</body>
</html>
